{{#if savedProduct}}
    <div class="alert alert-success" role="alert">
        Producto agregado con éxito!
    </div>
{{/if}}
<div class="container">
    <div class="row">
        <div class="col">
            <h1>Ingrese producto</h1>
            <form action="/api/productos/guardar" method="post" id="saveProduct">
                <div class="my-3">
                    <label class="form-label">Título del producto</label>
                    <input type="text" value="" placeholder="Ingrese el título" name="title" class="form-control" />
                </div>
                <div class="my-3">
                    <label class="form-label">Precio del producto</label>
                    <input type="number" value="" placeholder="Ingrese el precio" name="price" class="form-control" />
                </div>
                <div class="my-3">
                    <label class="form-label">URL de la imagen</label>
                    <input type="text" value="" placeholder="Ingrese la URL" name="thumbnail" class="form-control" />
                </div>
                <button class="btn btn-outline-primary btn-lg mt-3" type="submit">Guardar</button>
            </form>
        </div>
    </div>
</div>

<div id="dynamic-table"></div>
<div class="container">
    <h2>Centro de Mensajes</h2>
    <form action="#" id="chat-form">
        <div class="row">
            <div class="col-md-4">
                <input type="email" class="form-control" name="chat-email" id="chat-email" placeholder="Ingrese su email" required="required" />
            </div>
        </div>
        <div id="chat-box"></div>
        <div class="my-3 row">
            <div class="col-md-4">
                <input type="text" class="form-control" name="chat-msg" id="chat-msg" placeholder="Mensaje..." required="required" />
            </div>
            <div class="col-md-6">
                <button type="submit" class="btn btn-success">Enviar!</button>
            </div>
        </div>
    </form>
</div>